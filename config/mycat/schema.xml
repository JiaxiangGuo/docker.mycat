		<heartbeat>select user()</heartbeat>
		<writeHost host="192.168.1.104" url="192.168.1.104:3306" user="druid1" password="druid1">
			<!--			<readHost host="192.168.1.104" url="192.168.1.104:3306" user="druid" password="druid" />-->
		</writeHost>
	</dataHost>
